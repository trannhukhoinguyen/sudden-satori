---
const { children } = Astro.props;
const text = String(children).trim();
const isPoem = text.includes("\n");
---

<blockquote class={isPoem ? "poem" : "quote"}>
    {isPoem ? <pre>{text}</pre> : <p>{text}</p>}
</blockquote>

<style>
    blockquote {
        border-left: 4px solid #ccc;
        padding-left: 1rem;
        margin: 1rem 0;
        font-style: italic;
    }

    blockquote.poem {
        color: #444;
        font-family: "Times New Roman", serif;
    }
    blockquote.poem pre {
        margin: 0;
        white-space: pre-line;
    }

    blockquote.quote {
        color: #555;
        font-family: Georgia, serif;
    }
    blockquote.quote p {
        margin: 0;
    }
</style>
