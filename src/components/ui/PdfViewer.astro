---
const { pdfUrl } = Astro.props;
---

<style>
  @keyframes pulse {
    0% { opacity: 1 }
    50% { opacity: 0.4 }
    100% { opacity: 1 }
  }

  .pdf-icon {
    width: auto;
    height: 1.1rem;
    color: var(--color-accent-red);
    cursor: pointer;
    margin-left: 0.5rem;
    transition: transform 0.2s;


    animation: pulse 3s infinite;
  }
  .pdf-icon:hover {
    transform: scale(1.3);
  }

  /* Modal overlay */
  .pdf-modal-overlay {
    position: fixed;
    inset: 0;
    background: var(--color-background-overlay), var(--color-black) ;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  /* Modal content */
  .pdf-modal {
    background: var(--color-background), var(--color-white);
    border-radius: 8px;
    width: 90%;
    max-width: 900px;
    height: 90%;
    display: flex;
    flex-direction: column;
  }

  .pdf-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background: var(--color-background), var(--color-white);
    border-bottom: 1px solid var(--color-border);
  }

  .pdf-modal-header button {
    background: var(--color-accent-gold-dark);
    color: var(--color-text-primary);
    border: none;
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
  }

  .pdf-modal iframe {
    flex: 1;
    border: none;
  }
</style>

<!-- Trigger icon -->
<svg class="pdf-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="pdf-trigger">
  <path fill="currentColor" d="M6 2h9l5 5v15a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2z"/>
  <text x="6" y="18" font-size="7" fill="white">PDF</text>
</svg>

<!-- Modal -->
<div class="pdf-modal-overlay" id="pdf-modal" style="display:none;">
  <div class="pdf-modal">
    <div class="pdf-modal-header">
      <span>ðŸ“„ PDF Viewer</span>
      <div>
        <a href={pdfUrl} target="_blank" rel="noopener">
          <button>Xem trong tab má»›i</button>
        </a>
        <button id="pdf-close">âœ–</button>
      </div>
    </div>
    <iframe src={pdfUrl}></iframe>
  </div>
</div>

<script>
  const trigger = document.getElementById("pdf-trigger");
  const modal = document.getElementById("pdf-modal");
  const closeBtn = document.getElementById("pdf-close");

  trigger?.addEventListener("click", () => {
    modal.style.display = "flex";
  });

  closeBtn?.addEventListener("click", () => {
    modal.style.display = "none";
  });

  modal?.addEventListener("click", (e) => {
    if (e.target === modal) modal.style.display = "none"; // click outside closes
  });
</script>
