<style>
  @keyframes pulse {
    0% { opacity: 1 }
    50% { opacity: 0.4 }
    100% { opacity: 1 }
  }

  .content-icon {
    width: auto;
    height: 1.1rem;
    color: var(--color-accent-gold);
    cursor: pointer;
    margin-left: 0.5rem;
    transition: transform 0.2s;


    animation: pulse 3s infinite;
  }
  .content-icon:hover {
    transform: scale(1.3);
  }

  /* Modal overlay */
  .content-modal-overlay {
    position: fixed;
    inset: 0;
    background: var(--color-background-overlay), var(--color-black) ;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  /* Modal content */
  .content-modal {
    background: var(--color-background), var(--color-white);
    border-radius: 8px;
    width: 90%;
    max-width: 900px;
    height: 90%;
    display: flex;
    flex-direction: column;
  }

  .content-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background: var(--color-background), var(--color-white);
    border-bottom: 1px solid var(--color-border);
  }

  .content-modal-header button {
    background: var(--color-accent-gold-dark);
    color: var(--color-text-primary);
    border: none;
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
  }

  .content-modal iframe {
    flex: 1;
    border: none;
  }
</style>

