---
const {
  embed = "",
  query = "",
  width = "100%",
  height = "450",
} = Astro.props;

// Nếu người dùng chỉ truyền query, tự tạo link embed
// (dạng "search" – KHÔNG cần API key)
const src = embed
  ? embed
  : `https://www.google.com/maps?q=${encodeURIComponent(query)}&output=embed`;
---

<div style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;margin:1rem 0;">
  <iframe
    src={src}
    height={height}
    width={width}
    allowfullscreen
    loading="lazy">
  </iframe>
</div>
