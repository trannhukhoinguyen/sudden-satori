---
const {
  embed = "",
  query = "",
  width = "100%",
  height = "450",
} = Astro.props;

const src = embed
  ? embed
  : `https://www.google.com/maps?q=${encodeURIComponent(query)}&output=embed`;
---

<style>
    .map-wrapper {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        margin: 1rem 0;
        border-radius: 12px;
    }

    .map-wrapper iframe {
        position: absolute;
        top: 0; left: 0;
        width: 100%;
        height: 100%;
        border: 0;
        border-radius: 12px;
    }

    /* Nút mở modal */
    .map-expand-btn {
        position: absolute;
        top: 8px;
        right: 8px;
        z-index: 10;
        background: rgba(0,0,0,0.6);
        color: white;
        border: none;
        padding: 6px 10px;
        border-radius: 6px;
        cursor: pointer;
    }

    /* Modal overlay */
    .map-modal {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.6);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    /* Hiện modal */
    .map-modal.active {
        display: flex;
    }

    /* Modal content */
    .map-modal-content {
        position: relative;
        width: 90vw;
        height: 90vh;
    }

    .map-modal-content iframe {
        width: 100%;
        height: 100%;
        border: 0;
        border-radius: 12px;
    }

    /* Nút đóng modal */
    .map-close-btn {
        position: absolute;
        top: -40px;
        right: 0;
        background: white;
        border: none;
        padding: 8px 12px;
        font-size: 22px;
        border-radius: 6px;
        cursor: pointer;
    }
</style>

<div class="map-wrapper">
  <button class="map-expand-btn" id="open-map">↗️</button>
  <iframe src={src} loading="lazy" allowfullscreen></iframe>
</div>

<!-- MODAL -->
<div class="map-modal" id="map-modal">
  <div class="map-modal-content">
    <button class="map-close-btn" id="close-map">✕</button>
    <iframe src={src} allowfullscreen loading="lazy"></iframe>
  </div>
</div>

<script>
  const modal = document.getElementById("map-modal");
  const openBtn = document.getElementById("open-map");
  const closeBtn = document.getElementById("close-map");

  openBtn.addEventListener("click", () => {
    modal.classList.add("active");
    document.body.style.overflow = "hidden"; // khóa scroll
  });

  closeBtn.addEventListener("click", () => {
    modal.classList.remove("active");
    document.body.style.overflow = "";
  });

  // click ra ngoài modal để đóng
  modal.addEventListener("click", (e) => {
    if (e.target === modal) {
      modal.classList.remove("active");
      document.body.style.overflow = "";
    }
  });
</script>
