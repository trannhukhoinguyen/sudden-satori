<div class="back-to-top-wrapper">
    <div class="back-to-top-container">
        <a href="#top" aria-label="back_to_top" class="back-to-top-btn">
            <svg
                    class="back-to-top-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 12 12"
            >
                <g class="back-to-top-arrow">
                    <path
                            d="M9.2 6.4 6.4 9.1c-.1.1-.1.4 0 .5s.4.1.5 0l3.4-3.4c.1-.1.1-.4 0-.5L7 2.4c-.1-.1-.4-.1-.5 0-.1.1-.1.4 0 .5l2.7 2.7c.4.4.4.4 0 .8z"
                            fill="currentColor"
                            stroke="currentColor"
                            stroke-width="0.5"
                    ></path>
                    <g>
                        <path
                                class="back-to-top-line"
                                d="M9.6 5.6H1.9c-.2 0-.3.2-.3.4s.2.4.4.4h7.7c.2 0 .4-.2.4-.4s-.3-.4-.5-.4z"
                                fill="currentColor"
                                stroke="currentColor"
                                stroke-width="0.5"
                        ></path>
                    </g>
                </g>
            </svg>
        </a>
    </div>
</div>

<style>
    /* wrapper = sticky bottom bar */
    .back-to-top-wrapper {
        pointer-events: none;
        position: sticky;
        bottom: 0;
        right: 0;
        z-index: 40;
        margin-bottom: -2rem; /* -mb-8 */
        height: 2rem; /* h-8 */
        width: 100%; /* w-full */
    }

    /* container = flex box to right align */
    .back-to-top-container {
        position: absolute;
        bottom: 0;
        display: flex;
        justify-content: flex-end;
        max-width: 1280px; /* container-xl (approx Tailwindâ€™s max width) */
        margin: 0 auto;
        left: 0;
        right: 0;
    }

    /* button styling */
    .back-to-top-btn {
        pointer-events: auto;
        display: grid;
        place-items: center;
        height: 2.5rem; /* h-10 */
        width: 2.5rem;  /* w-10 */
        transform: translateY(-1rem); /* -translate-y-4 */
        opacity: 0; /* initially hidden */
        border-radius: 0.5rem;
        text-decoration: none;
        background: var(--color-background, #fff); /* surface-primary fallback */
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        transition: opacity 0.3s ease;
    }

    /* icon rotation */
    .back-to-top-icon {
        height: 1.25rem; /* h-5 */
        width: 1.25rem; /* w-5 */
        transform: rotate(-90deg);
    }

    /* arrow group translate animation */
    .back-to-top-arrow {
        transform: translateX(-20%);
        transition: transform 0.3s ease;
    }
    .back-to-top-btn:hover .back-to-top-arrow {
        transform: translateX(0);
    }

    /* line path scaling animation */
    .back-to-top-line {
        transform-origin: right;
        transform: translateX(-8%) scaleX(0);
        transition: transform 0.3s ease;
    }
    .back-to-top-btn:hover .back-to-top-line {
        transform: scaleX(0.75);
    }
</style>

