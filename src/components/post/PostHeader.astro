---
import PostDateTime from "./PostDateTime.astro";
import PostCategories from "./PostCategories.astro";
import PostExcerpt from "./PostExcerpt.astro";
import PdfViewer from "../ui/PdfViewer.astro";

const { post } = Astro.props;
const { frontmatter } = post as any;
---

<header>
  <h2 class="post-title">{frontmatter.title}</h2>

  <div class="post-meta">
    <PostDateTime post={post} />

    {
      frontmatter?.categories?.length
          ? <PostCategories frontmatter={frontmatter} />
          : ''
    }

    <!-- PDF Viewer -->
    <PdfViewer pdfUrl={frontmatter.pdfUrl} title={frontmatter.title} />
  </div>

  {
    frontmatter.excerpt
      ? <PostExcerpt frontmatter={frontmatter}/>
      : ''
  }

  <hr class="monumental-rule" />
</header>
