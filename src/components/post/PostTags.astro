---
import "@/styles/badgeList.css";

const { frontmatter, showLabel = true, floatRight = false } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div style={ floatRight ? 'float: right' : ''}>
    {frontmatter.tags && frontmatter.tags.length > 0 && (
            <div class="post-badges">
                <div class="badge-list">
                    {
                        showLabel ? <span class="badges-label" title="Tag">üéè</span> : ''
                    }

                    {
                        frontmatter.tags.map((tag: string) => <a href={`${base}tags/${tag.toLowerCase().replace(/[\/\s]+/g, '-')}`}>
                            <span class="badge badge-label badge-tag">{tag}</span>
                        </a>)
                    }
                </div>
            </div>
    )}
</div>
