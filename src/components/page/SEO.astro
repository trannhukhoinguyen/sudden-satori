---
export interface Props {
    title?: string;
    meta_title?: string;
    description?: string;
    excerpt?: string;
    image?: string;
    type?: 'website' | 'article';
    publishedTime?: string;
    modifiedTime?: string; // thêm để hỗ trợ SEO bài viết cập nhật
    canonical?: string;
    noindex?: boolean;     // cho phép tắt index nếu cần
}

import { SITE_TITLE, SITE_DESCRIPTION } from '../../config';

const {
    title = SITE_TITLE,
    meta_title,
    description = SITE_DESCRIPTION,
    excerpt,
    image = '/images/backgrounds/thien-dinh-cua-Phat.jpg',
    type = 'website',
    publishedTime,
    modifiedTime,
    canonical,
    noindex = false,
} = Astro.props;

const seoTitle = meta_title || title;
const pageTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);
const metaDescription = description || excerpt || SITE_DESCRIPTION;
---

<title>{pageTitle}</title>
<meta name="description" content={metaDescription} />
<meta name="author" content="Tổ Sư Thiền" />

{
    noindex
        ? <>
        <meta name="robots" content="noindex, nofollow" />
        <meta name="googlebot" content="noindex, nofollow" />
    </>
        : <>
        <meta name="robots" content="index, follow" />
        <meta name="googlebot" content="index, follow" />
    </>
}

<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={imageURL} />
<meta property="og:site_name" content={SITE_TITLE} />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={imageURL} />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Extras -->
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />
<link rel="sitemap" type="application/xml" href="/sitemap-0.xml" />
<link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

