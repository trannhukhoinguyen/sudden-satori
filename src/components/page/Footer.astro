---
import { config } from '../../config';
import FacebookSVG from "../svg/FacebookSVG.astro";
import YoutubeSVG from "../svg/YoutubeSVG.astro";
import BookCaseSVG from "../svg/BookCaseSVG.astro";
import SiteSVG from "../svg/SiteSVG.astro";
import PersonSVG from "../svg/PersonSVG.astro";
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-info">
      <p class="copyright">
        ⚡️ {config.author.name}
      </p>
    </div>

    <div class="social-links">
      {config.social.facebook && (
        <a href={config.social.facebook} target="_blank" rel="noopener" aria-label="Facebook" class="social-link" title="Facebook Tổ Sư Thiền">
          <FacebookSVG />
        </a>
      )}

      {config.social.youtube2 && (
        <a href={config.social.youtube2} target="_blank" rel="noopener" aria-label="Youtube" class="social-link" title="Youtube Tổ Sư Thiền">
          <YoutubeSVG />
        </a>
      )}

      {config.social.youtube3 && (
        <a href={config.social.youtube3} target="_blank" rel="noopener" aria-label="Youtube" class="social-link" title="Youtube Tổ Sư Thiền">
          <YoutubeSVG />
        </a>
      )}

<!--      {config.social.bookcase && (
        <a href={config.social.bookcase} target="_blank" rel="noopener" aria-label="Bookcase" class="social-link" title="Tủ sách Tổ Sư Thiền">
          <BookCaseSVG />
        </a>
      )}-->

<!--      {config.social.bookcase2 && (
        <a href={config.social.bookcase2} target="_blank" rel="noopener" aria-label="Bookcase" class="social-link" title="Tủ sách Tổ Sư Thiền">
          &lt;!&ndash;<BookCaseSVG />&ndash;&gt;
          <img src="/images/svg/bookshelf-color.svg" alt="Tủ sách Tổ Sư Thiền"/>
        </a>
      )}-->

<!--      {config.social.tosuthien1 && (
        <a href={config.social.tosuthien1} target="_blank" rel="noopener" aria-label="Bookcase" class="social-link" title="Web Tổ Sư Thiền khác">
          <SiteSVG />
        </a>
      )}

      {config.social.masterSite && (
        <a href={config.social.masterSite} target="_blank" rel="noopener" aria-label="Bookcase" class="social-link" title="Thiền sư Ngữ lục">
          <PersonSVG />
        </a>
      )}-->
    </div>
  </div>
</footer>

<style>
  /* FOOTER */
  .site-footer {
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: row;
    gap: calc(var(--grid-unit));
  }

  .copyright,
  .theme-credit {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .theme-credit a {
    color: var(--color-accent-gold);
    font-weight: 500;
  }

  .theme-credit a:hover,
  .theme-credit a:focus {
    color: var(--color-text-primary);
  }

  .social-links,
  .extra-group {
    display: flex;
    gap: calc(var(--grid-unit) * 1.5);
    align-items: center;
  }

  .social-link,
  .extra-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-footer);
    background-color: var(--color-background-footer);
    border: 1px solid #c6c6c6;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .social-link:hover,
  .social-link:focus,
  .extra-item:hover,
  .extra-item:focus {
    background-color: var(--color-accent-gold);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: calc(var(--grid-unit) * 2);
    }

    .footer-info {
      order: 2;
    }

    .social-links {
      order: 1;
    }
  }
</style>
