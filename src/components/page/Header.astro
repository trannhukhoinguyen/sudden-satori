        <path class="hamburger-line" d="M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <div class="site-title">
      <a href={base}>
        <img src={base + "site-title.svg"} alt={config.title} class="title-svg" />
      </a>
    </div>

    <div class="header-controls">
      <nav class="main-navigation" role="navigation" aria-label="Main navigation">
        <ul class="nav-list">
          <li><a href={base} class="nav-link" title="Trang chủ">🛖</a></li>
          <li><a href={base + "about"} class="nav-link" title="Tổ sư thiền?">Tổ sư thiền?</a></li>
          <li><a href={base + "sutras"} class="nav-link">📙 Kinh</a></li>
          <li><a href={base + "practices"} class="nav-link" title="Thực hành">⚡️Thực hành</a></li>
          <li><a href={base + "interpretations"} class="nav-link" title="Luận giải">📖 Luận giải</a></li>
          <li><a href={base + "speeches"} class="nav-link" title="Ngữ Lục">💬 Ngữ Lục</a></li>
          <li>
            <select id="nav-select" class="nav-select" aria-label="Main navigation">
              <option value="" disabled selected hidden>Khác</option>
              <option value={base + "masters"}>🌟 Thiền sư</option>
              <option value={base + "koans"}>🪨 Công án</option>
              <option value={base + "pagodas"}>⛩ Thiền đường</option>
              <option value={base + "interpretations"}>📖 Luận giải</option>
              <option value={base + "blogs"} title="Blog">📜 Tổ sư thiền?</option>
              <option value={base + "zongjinglus"}>🪞 Tông Cảnh Lục</option>
              <option value={base + "places"}>🗻  Địa danh</option>
              <option value={base + "categories"}>📦 Category</option>
              <option value={base + "tags"}>🎏 Tag</option>
            </select>
          </li>
        </ul>
      </nav>

      <!-- Mobile controls group - RSS and Search on right -->
      <div class="mobile-controls">
        <ThemeSwitcher />

        <button class="search-toggle" id="search-toggle" aria-label="Tìm kiếm bài viết" title="Tìm kiếm nội dung">
