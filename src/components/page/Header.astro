    background-color: var(--color-accent-gold);
    color: white;
    border-color: var(--color-accent-gold);
  }

  .search-no-results {
    padding: calc(var(--grid-unit) * 10) calc(var(--grid-unit) * 6);
    text-align: center;
  }

