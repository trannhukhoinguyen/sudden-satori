---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';
import Faqs from "../../apps/mirror-cleaning/src/components/Faqs.astro";
import TextMarquee from "../../apps/mirror-cleaning/src/components/TextMarquee.astro";
import StepsTimeline from "../../apps/mirror-cleaning/src/components/StepsTimeline.astro";
import Plans from "../../apps/mirror-cleaning/src/components/Plans.astro";
import GLPlaces from "../../apps/mirror-cleaning/src/components/GlPlaces.astro";
import GalleryText from "../../apps/mirror-cleaning/src/components/GalleryText.astro";
import HeroHome from "../../apps/mirror-cleaning/src/components/HeroHome.astro";
import Statements from "../../apps/mirror-cleaning/src/components/Statements.astro";
import ImageMarquee from "../../apps/mirror-cleaning/src/components/ImageMarquee.astro";
import GL from "../../apps/mirror-cleaning/src/components/GL.astro";
import Introducing from "../../apps/mirror-cleaning/src/components/Introducing.astro";

import logo1 from "../assets/logoipsum-344.svg";
import logo2 from "../assets/logoipsum-350.svg";
import logo3 from "../assets/logoipsum-345.svg";
import logo4 from "../assets/logoipsum-385.svg";
import logo5 from "../assets/logoipsum-375.svg";
import logo6 from "../assets/logoipsum-378.svg";
import logo7 from "../assets/logoipsum-346.svg";
import logo8 from "../assets/logoipsum-331.svg";

const { title, description, author, social } = config;
---

<Layout title={title} description={description}>
  <HeroHome
      title="Build Faster. Launch Smarter."
      subtitle="Everything you need to design, manage, and ship high-quality projects without friction, guesswork, or wasted time."
      cta={{
        title: "Get Started",
        url: "#",
      }}
  />

  <Introducing
      title="A platform designed to turn ideas into impact"
      text="From first concept to final delivery, our tools streamline collaboration, eliminate bottlenecks, and keep your team focused on what matters most: results. Simple to adopt, powerful at scale."
      cta={{
        title: "Get Started",
        url: "#",
      }}
  />

  <StepsTimeline
      title="How it works"
      items={[
        {
          title: "Set up in minutes",
          text: "Create your workspace, invite your team, and configure projects effortlessly—no complex onboarding or technical setup required.",
        },
        {
          title: "Collaborate without friction",
          text: "Centralize communication, assets, and tasks in one place so everyone stays aligned and productive.",
        },
        {
          title: "Deliver measurable results",
          text: "Track progress in real time, optimize workflows, and ship projects faster with complete visibility.",
        },
      ]}
  />

  <GalleryText
      title="Designed for teams that value clarity and speed"
      text="A clean interface, powerful features, and thoughtful details come together to help your team move faster—without sacrificing quality."
      cta={{
        title: "Try It Today",
        url: "#",
      }}
      images={[
        {
          alt: "Dashboard overview",
          src: "/image-1.jpg",
          width: 6000,
          height: 4000,
        },
        {
          alt: "Project collaboration view",
          src: "/image-2.jpg",
          width: 2689,
          height: 4032,
        },
        {
          alt: "Analytics and reporting",
          src: "/image-3.jpg",
          width: 3734,
          height: 5359,
        },
      ]}
      marqueeTexts={[
        "Creative Firepower",
        "Built for Speed",
        "Trusted by Professionals",
        "Simple, Transparent Pricing",
      ]}
  />

  <Statements
      items={[
        {
          title: "For modern teams",
          text: "Every feature is designed to reduce complexity and maximize execution speed.",
        },
        {
          title: "Scales as you grow",
          text: "Whether you’re a solo creator or a global team, the platform adapts to your workflow.",
        },
        {
          title: "Real outcomes",
          text: "Less busywork, more progress—so you can deliver meaningful results consistently.",
        },
      ]}
  />

  <TextMarquee
      class="marquee"
      texts={[
        "Creative Firepower",
        "Built for Speed",
        "Trusted by Professionals",
        "Simple, Transparent Pricing",
      ]}
  />

  <Plans
      title="Plans & Pricing"
      subtitle="Start for free, upgrade when you’re ready. No hidden fees, no long-term commitments."
      items={[
        {
          title: "Free Plan",
          price: {
            amount: "$0",
            duration: "month",
          },
          link: {
            title: "Get Started Free",
            url: "#",
          },
          features: [
            { title: "Up to 50 accounts" },
            { title: "Unlimited projects" },
            { title: "Chat support", disabled: true },
            { title: "Email support", disabled: true },
            { title: "Custom onboarding", disabled: true },
          ],
        },
        {
          title: "Premium Plan",
          price: {
            amount: "$20",
            duration: "month",
          },
          link: {
            title: "Start 14-Day Trial",
            url: "#",
          },
          features: [
            { title: "Up to 50 accounts" },
            { title: "Unlimited projects" },
            { title: "Priority chat support" },
            { title: "Email support" },
            { title: "Custom onboarding assistance" },
          ],
        },
      ]}
  />

  <Faqs
      title="Frequently Asked Questions"
      mobileTitle="FAQs"
      subtitle="Quick answers to the most common questions."
      items={[
        {
          question: "Who is this platform for?",
          answer:
              "It’s built for creators, startups, agencies, and teams who want to move faster without sacrificing quality or control.",
        },
        {
          question: "Can I upgrade or downgrade at any time?",
          answer:
              "Yes. You can change plans whenever you need, with no penalties or long-term contracts.",
        },
        {
          question: "Does the free plan really cost nothing?",
          answer:
              "Absolutely. The free plan gives you full access to core features so you can evaluate the platform with confidence.",
        },
        {
          question: "Is my data secure?",
          answer:
              "Yes. We use industry-standard security practices to protect your data and ensure reliability.",
        },
        {
          question: "Do you offer support during onboarding?",
          answer:
              "Premium users receive guided onboarding and priority support to ensure a smooth start.",
        },
      ]}
  />

  <ImageMarquee
      images={[
        {
          src: logo1.src,
          alt: "Logo 1",
        },
        {
          src: logo3.src,
          alt: "Logo 3",
        },
        {
          src: logo4.src,
          alt: "Logo 4",
        },
        {
          src: logo8.src,
          alt: "Logo 8",
        },
        {
          src: logo5.src,
          alt: "Logo 5",
        },
        {
          src: logo6.src,
          alt: "Logo 6",
        },
        {
          src: logo2.src,
          alt: "Logo 2",
        },
        {
          src: logo7.src,
          alt: "Logo 7",
        },
      ]}
  />

  <GL />
  <GLPlaces />
</Layout>

<style>
  .about-page {
    .marquee {
      padding: 2rem 0;
      z-index: 9;
    }
  }
</style>
