---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';
import Faqs from "../components/ui/mirror-cleaning/Faqs.astro";
import TextMarquee from "../components/ui/mirror-cleaning/TextMarquee.astro";
import StepsTimeline from "../components/ui/mirror-cleaning/StepsTimeline.astro";
import StepsTimelineImage from "../components/ui/mirror-cleaning/StepsTimelineImage.astro";
import Plans from "../components/ui/mirror-cleaning/Plans.astro";
import GLPlaces from "../components/ui/mirror-cleaning/GlPlaces.astro";
import GalleryText from "../components/ui/mirror-cleaning/GalleryText.astro";
import HeroHome from "../components/ui/mirror-cleaning/HeroHome.astro";
import Statements from "../components/ui/mirror-cleaning/Statements.astro";
import ImageMarquee from "../components/ui/mirror-cleaning/ImageMarquee.astro";
import GL from "../components/ui/mirror-cleaning/GL.astro";
import Introducing from "../components/ui/mirror-cleaning/Introducing.astro";

import buffaloPainting1 from "../assets/images/10-buffalo-paintings/buffalo-painting-1.png";
import buffaloPainting2 from "../assets/images/10-buffalo-paintings/buffalo-painting-2.png";
import buffaloPainting3 from "../assets/images/10-buffalo-paintings/buffalo-painting-3.png";
import buffaloPainting4 from "../assets/images/10-buffalo-paintings/buffalo-painting-4.png";
import buffaloPainting5 from "../assets/images/10-buffalo-paintings/buffalo-painting-5.png";
import buffaloPainting6 from "../assets/images/10-buffalo-paintings/buffalo-painting-6.png";
import buffaloPainting7 from "../assets/images/10-buffalo-paintings/buffalo-painting-7.png";
import buffaloPainting8 from "../assets/images/10-buffalo-paintings/buffalo-painting-8.png";
import buffaloPainting9 from "../assets/images/10-buffalo-paintings/buffalo-painting-9.png";
import buffaloPainting10 from "../assets/images/10-buffalo-paintings/buffalo-painting-10.png";

const { title, description } = config;
---

<Layout title={title} description={description}>
  <HeroHome
      title="Build Faster. Launch Smarter."
      subtitle="Everything you need to design, manage, and ship high-quality projects without friction, guesswork, or wasted time."
      cta={{
        title: "Get Started",
        url: "#",
      }}
  />

  <Introducing
      title="A platform designed to turn ideas into impact"
      text="From first concept to final delivery, our tools streamline collaboration, eliminate bottlenecks, and keep your team focused on what matters most: results. Simple to adopt, powerful at scale."
      cta={{
        title: "Get Started",
        url: "#",
      }}
  />

  <StepsTimeline
      title="How it works"
      items={[
        {
          time: "500",
          title: "Set up in minutes",
          text: "Create your workspace, invite your team, and configure projects effortlessly—no complex onboarding or technical setup required.",
        },
        {
          time: "500",
          title: "Collaborate without friction",
          text: "Centralize communication, assets, and tasks in one place so everyone stays aligned and productive.",
        },
        {
          time: "500",
          title: "Deliver measurable results",
          text: "Track progress in real time, optimize workflows, and ship projects faster with complete visibility.",
        },
      ]}
  />

    <StepsTimelineImage
        title="Image"
        items={[
            {
                title: "Tìm trâu",
                text: "1",
                image: buffaloPainting1,
            },
            {
                title: "Thấy dấu",
                text: "2",
                image: buffaloPainting2,
            },
            {
                title: "Thấy trâu",
                text: "3",
                image: buffaloPainting3,
            },
            {
                title: "Bắt trâu",
                text: "4",
                image: buffaloPainting4,
            },
            {
                title: "Chăn trâu",
                text: "5",
                image: buffaloPainting5,
            },
            {
                title: "Cưỡi trâu về nhà",
                text: "6",
                image: buffaloPainting6,
            },
            {
                title: "Quên trâu còn người",
                text: "7",
                image: buffaloPainting7,
            },
            {
                title: "Người, trâu đều quên",
                text: "8",
                image: buffaloPainting8,
            },
            {
                title: "Trở về nguồn cội",
                text: "9",
                image: buffaloPainting9,
            },
            {
                title: "Thõng tay vào chợ",
                text: "10",
                image: buffaloPainting10,
            },
        ]}
    />

  <GalleryText
      title="Designed for teams that value clarity and speed"
      text="A clean interface, powerful features, and thoughtful details come together to help your team move faster—without sacrificing quality."
      cta={{
        title: "Try It Today",
        url: "#",
      }}
      images={[
        {
          alt: "Dashboard overview",
          src: "/image-1.jpg",
          width: 6000,
          height: 4000,
        },
        {
          alt: "Project collaboration view",
          src: "/image-2.jpg",
          width: 2689,
          height: 4032,
        },
        {
          alt: "Analytics and reporting",
          src: "/image-3.jpg",
          width: 3734,
          height: 5359,
        },
      ]}
      marqueeTexts={[
        "Creative Firepower",
        "Built for Speed",
        "Trusted by Professionals",
        "Simple, Transparent Pricing",
      ]}
  />

  <Statements
      items={[
        {
          title: "For modern teams",
          text: "Every feature is designed to reduce complexity and maximize execution speed.",
        },
        {
          title: "Scales as you grow",
          text: "Whether you’re a solo creator or a global team, the platform adapts to your workflow.",
        },
        {
          title: "Real outcomes",
          text: "Less busywork, more progress—so you can deliver meaningful results consistently.",
        },
      ]}
  />

  <TextMarquee
      class="marquee"
      texts={[
        "Creative Firepower",
        "Built for Speed",
        "Trusted by Professionals",
        "Simple, Transparent Pricing",
      ]}
  />

  <Plans
      title="Plans & Pricing"
      subtitle="Start for free, upgrade when you’re ready. No hidden fees, no long-term commitments."
      items={[
        {
          title: "Free Plan",
          price: {
            amount: "$0",
            duration: "month",
          },
          link: {
            title: "Get Started Free",
            url: "#",
          },
          features: [
            { title: "Up to 50 accounts" },
            { title: "Unlimited projects" },
            { title: "Chat support", disabled: true },
            { title: "Email support", disabled: true },
            { title: "Custom onboarding", disabled: true },
          ],
        },
        {
          title: "Premium Plan",
          price: {
            amount: "$20",
            duration: "month",
          },
          link: {
            title: "Start 14-Day Trial",
            url: "#",
          },
          features: [
            { title: "Up to 50 accounts" },
            { title: "Unlimited projects" },
            { title: "Priority chat support" },
            { title: "Email support" },
            { title: "Custom onboarding assistance" },
          ],
        },
      ]}
  />

  <Faqs
      title="Frequently Asked Questions"
      mobileTitle="FAQs"
      subtitle="Quick answers to the most common questions."
      items={[
        {
          question: "Who is this platform for?",
          answer:
              "It’s built for creators, startups, agencies, and teams who want to move faster without sacrificing quality or control.",
        },
        {
          question: "Can I upgrade or downgrade at any time?",
          answer:
              "Yes. You can change plans whenever you need, with no penalties or long-term contracts.",
        },
        {
          question: "Does the free plan really cost nothing?",
          answer:
              "Absolutely. The free plan gives you full access to core features so you can evaluate the platform with confidence.",
        },
        {
          question: "Is my data secure?",
          answer:
              "Yes. We use industry-standard security practices to protect your data and ensure reliability.",
        },
        {
          question: "Do you offer support during onboarding?",
          answer:
              "Premium users receive guided onboarding and priority support to ensure a smooth start.",
        },
      ]}
  />

  <ImageMarquee
      images={[
        {
          src: buffaloPainting1.src,
          alt: "buffalo painting 1",
        },
        {
          src: buffaloPainting2.src,
          alt: "buffalo painting 2",
        },
        {
          src: buffaloPainting3.src,
          alt: "buffalo painting 3",
        },
        {
          src: buffaloPainting4.src,
          alt: "buffalo painting 4",
        },
        {
          src: buffaloPainting5.src,
          alt: "buffalo painting 5",
        },
        {
          src: buffaloPainting6.src,
          alt: "buffalo painting 6",
        },
        {
          src: buffaloPainting7.src,
          alt: "buffalo painting 7",
        },
        {
          src: buffaloPainting8.src,
          alt: "buffalo painting 8",
        },
        {
          src: buffaloPainting9.src,
          alt: "buffalo painting 9",
        },
        {
          src: buffaloPainting10.src,
          alt: "buffalo painting 10",
        },
      ]}
  />

  <GL />
  <GLPlaces />
</Layout>

<style>
  .about-page {
    .marquee {
      padding: 2rem 0;
      z-index: 9;
    }
  }
</style>
