---
import Layout from '../components/Layout.astro';
import DynamicTable from "../components/DynamicTable.astro";

const pageDescription = "";
---

<Layout title={`Thiền sư`} description={pageDescription}>
  <div class="about-page">
    <header class="page-header">
      <h1 class="page-title">Thiền sư</h1>
      <hr class="page-rule" />
    </header>
    <DynamicTable />
  </div>
</Layout>

<style>
  .about-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .page-title {
    font-family: var(--font-heading-primary);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 4);
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }
  }

  .wrapper {
    margin: 40px 0;
  }
  .toolbar {
    display: flex; gap: 12px; margin-bottom: 12px;
  }
  .pagination {
    margin-top: 12px; display: flex; gap: 8px;
  }
  .pagination button.active {
    background: #333; color: white;
  }
  .thumb {
    width: 70px; height: 50px; overflow: hidden;
  }
  .table > tbody > tr > td {
    vertical-align: middle;
  }
  .video_box {
    background: rgba(0, 0, 0, 0.54);
    width: 100%; height: 100%;
    position: fixed; top: 0; left: 0;
    display: flex; align-items: center; justify-content: center;
  }
  .video_inner {
    background: #fff; padding: 15px; position: relative;
  }
  .modal-close {
    position: absolute; top: -10px; right: -10px;
    background: #d64a4a; color: #fff; border: none; font-size: 24px;
    cursor: pointer;
  }
  .video_body iframe {
    width: 400px; height: 250px;
  }
</style>
