import MasterGrid from "../components/masterUi/MasterGrid.astro";
import MasterGridHeader from "../components/masterUi/MasterGridHeader.astro";
import Preloader from "../components/masterUi/Preloader.astro";
import {getCollection} from "astro:content";

const title = "Thiền sư";
const description = "...";
const allMasters = await getCollection("masters");
const mastersTotal = allMasters.length;
---

