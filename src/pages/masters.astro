---
import Layout from '../layouts/Layout.astro';
import AllMasters from '../data/masters/AllMasterDb';
import Table from '../components/ui/Table.astro';

const title = "Thiền sư";
const pageDescription = "";

const customizeAllMasters =
    AllMasters
        ?.map(({
           sect,
           country,
           teachers,
           epoch,
           nickname_vi,
           name_vi,
           name_en,
           name_zh,
           name_jp,
           ...rest
         }) => ({
                      name_vi,
                      nickname_vi,
                      name_en,
                      name_zh,
                      name_jp,
                      sect,
                      country,
                      teachers,
                      epoch,
                     })
          );
---

<Layout title={title} description={pageDescription}>
  <div class="master-page">
    <header class="page-header">
      <h1 class="page-title">Thiền sư</h1>
      <hr class="page-rule" />
      <p>🌸: truyền thừa cả 5 tông phái</p>
      <p>🌟: có nhiều sư phụ truyền thừa</p>
    </header>

    <Table data={ customizeAllMasters } />

  </div>
</Layout>

<style>
  .master-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .page-title {
    font-family: var(--font-heading-primary),serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent-gold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 4);
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent-gold);
    border: none;
    width: 120px;
    margin: 0 auto;
  }
</style>
