---
import Layout from '../layouts/Layout.astro';

const title = 'Tủ sách Tổ Sư Thiền';
const description = ``;
---

<Layout title={title} description={description}>
  <div class="book-shelf-page">
    <header class="page-header">
      <h1 class="page-title">{title}</h1>
      <hr class="page-rule" />
    </header>

    <div class="content-section">
      <h2>VietNam Best Choices</h2>
      <section class="section">
        <iframe
            style='width:100%;height:500px'
            src='https://pubhtml5.com/bookcase/wuxzq//green'
            seamless='seamless' scrolling='no' frameborder='0'
            allowtransparency='true'
            allowfullscreen
        />
      </section>
      <hr class="page-rule" />
      <h2>VietNam Full</h2>
      <section class="section">
        <iframe
            style='width:100%;height:500px'
            src='https://pubhtml5.com/bookcase/cunen//green'
            seamless='seamless' scrolling='no' frameborder='0'
            allowtransparency='true'
            allowfullscreen
        />
      </section>
      <hr class="page-rule" />
      <section class="section">
        <iframe
          style='width:100%;height:500px'
          src='https://pubhtml5.com/bookcase/qkqyg//green'
          seamless='seamless' scrolling='no' frameborder='0'
          allowtransparency='true'
          allowfullscreen
      />
      </section>
    </div>
  </div>
</Layout>

<style>
  .book-shelf-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .page-title {
    font-family: var(--font-heading-primary),serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent-gold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 4);
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent-gold);
    border: none;
    width: 120px;
    margin: 0 auto;
  }
</style>
