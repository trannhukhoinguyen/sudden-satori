export async function getStaticPaths() {
  // 1. Paths cho tags thật
  const tagPaths = Object.entries(CONTENT_MAP).flatMap(([collection, data]) =>
      data.tags.map(([tag, posts]) => {
        const tagSlug = tag.toLowerCase().replace(/[\/\s]+/g, '-');
        return {
          params: { tag: tagSlug },
          props: {
            mode: "tag", // ✅ phân biệt mode
            tag,
            posts,
            collection,
          },
        };
      })
  );

  // 2. Paths cho collection name
  const collectionPaths = Object.entries(CONTENT_MAP).map(([collection, data]) => ({
    params: { tag: collection }, // ✅ reuse param "tag"
    props: {
      mode: "collection",
      tag: collection,
      posts: data.posts, // có thể không dùng, nhưng để đồng bộ
      collection,
      tags: data.tags, // ✅ list toàn bộ tags trong collection
    },
  }));

  return [...tagPaths, ...collectionPaths];
}

const { mode, tag, posts, collection, tags = [] } = Astro.props;
const base = import.meta.env.BASE_URL;

const description =
    mode === "tag"
        ? `Tất cả bài viết với tag "${tag}" trong ${collection}`
        : `Danh sách toàn bộ tags trong collection ${collection}`;
---

<Layout title={tag} description={description}>
  <div class="tag-page">
    <header class="page-header">
      <h1 class="page-title">Tag: {tag}</h1>
      <p class="page-description">
        {posts.length} bài viết trong collection <strong>{collection}</strong>
      </p>
      <hr class="page-rule" />
    </header>

    <div class="posts-list">
      {posts.map((post: any) => {
        const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
        return (
            <article class="post-item">
              <h2 class="post-title">
                <a href={`${base}${post.frontmatter.type}/${slug}`}>
                  {post.frontmatter.title}
                </a>
              </h2>

              <div class="post-meta">
                <time
                    class="post-date"
                    datetime={new Date(post.frontmatter.date).toISOString()}
                >
                  {new Date(post.frontmatter.date).toLocaleDateString("vi-VN", {
                    year: "numeric",
                    month: "long",
                    day: "numeric"
                  })}
                </time>
              </div>

              {post.frontmatter.excerpt && (
                  <p class="post-excerpt">{post.frontmatter.excerpt}</p>
              )}

              <a href={`${base}${post.frontmatter.type}/${slug}`} class="read-more">
                Đọc tiếp →
              </a>
            </article>
        );
      })}
    </div>

    <div class="page-navigation">
      <a href={`${base}${collection}/tags`} class="back-link">
        ← Xem tất cả Tags trong {collection}
      </a>
    </div>
  </div>
</Layout>
