export async function getStaticPaths() {
  // 1. Paths cho tags th·∫≠t
  const tagPaths = Object.entries(CONTENT_MAP).flatMap(([collection, data]) =>
      data.tags.map(([tag, posts]) => {
        const tagSlug = tag.toLowerCase().replace(/[\/\s]+/g, '-');
        return {
          params: { tag: tagSlug },
          props: {
            mode: "tag", // ‚úÖ ph√¢n bi·ªát mode
            tag,
            posts,
            collection,
          },
        };
      })
  );

  // 2. Paths cho collection name
  const collectionPaths = Object.entries(CONTENT_MAP).map(([collection, data]) => ({
    params: { tag: collection }, // ‚úÖ reuse param "tag"
    props: {
      mode: "collection",
      tag: collection,
      posts: data.posts, // c√≥ th·ªÉ kh√¥ng d√πng, nh∆∞ng ƒë·ªÉ ƒë·ªìng b·ªô
      collection,
      tags: data.tags, // ‚úÖ list to√†n b·ªô tags trong collection
    },
  }));

  return [...tagPaths, ...collectionPaths];
}

const { mode, tag, posts, collection } = Astro.props as TagPageProps;
const tags = mode === "collection" ? (Astro.props as any).tags : [];
const base = import.meta.env.BASE_URL;

const description =
    mode === "tag"
        ? `T·∫•t c·∫£ b√†i vi·∫øt v·ªõi tag "${tag}" trong ${collection}`
        : `Danh s√°ch to√†n b·ªô tags trong collection ${collection}`;
---

<Layout title={tag} description={description}>
  <div class="tag-page">
    <header class="page-header">
      <h1 class="page-title">
        {mode === "tag" ? `Tag: ${tag}` : `Tags trong ${collection}`}
      </h1>
      <p class="page-description">
        {mode === "tag"
            ? `${posts.length} b√†i vi·∫øt trong tag n√†y`
            : `${tags.length} tags trong collection ${collection}`}
      </p>
      <hr class="page-rule" />
    </header>

    {mode === "tag" ? (
        // üëâ Tr∆∞·ªùng h·ª£p tag th·∫≠t ‚Üí list b√†i vi·∫øt
      <div class="posts-list">
          {posts.map((post: any) => {
            const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
            return (
                <article class="post-item">
                  <h2 class="post-title">
                    <a href={`${base}${post.frontmatter.type}/${slug}`}>
                      {post.frontmatter.title}
                    </a>
                  </h2>

                  <div class="post-meta">
                    <time
                        class="post-date"
                        datetime={new Date(post.frontmatter.date).toISOString()}
                    >
                      {new Date(post.frontmatter.date).toLocaleDateString("vi-VN", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })}
                    </time>
                  </div>

                  {post.frontmatter.excerpt && (
                      <p class="post-excerpt">{post.frontmatter.excerpt}</p>
                  )}

                  <a href={`${base}${post.frontmatter.type}/${slug}`} class="read-more">
                    ƒê·ªçc ti·∫øp ‚Üí
                  </a>
                </article>
            );
          })}
        </div>
    ) : (
        // üëâ Tr∆∞·ªùng h·ª£p collection ‚Üí list to√†n b·ªô tags trong collection
      <div class="tags-list">
          {tags.map(([tagName, posts]) => {
            const tagSlug = tagName.toLowerCase().replace(/[\/\s]+/g, '-');
            return (
                <div class="tag-item">
                  <a href={`${base}tags/${tagSlug}`} class="tag-link">
                    {tagName} ({posts.length})
                  </a>
                </div>
            );
          })}
        </div>
    )}

    <div class="page-navigation">
      <a href={`${base}/${mode === "tag" ? `${collection}/tags` : collection}`} class="back-link">
        ‚Üê Quay l·∫°i {mode === "tag" ? "t·∫•t c·∫£ Tags" : "Collection"}
      </a>
    </div>
  </div>
</Layout>
