export async function getStaticPaths() {
  // 1. Tạo path cho categories thật
  const categoryPaths = Object.entries(CONTENT_MAP).flatMap(([collection, data]) =>
      data.categories.map(([category, posts]) => {
        const categorySlug = category.toLowerCase().replace(/[\/\s]+/g, '-');
        return {
          params: { category: categorySlug },
          props: {
            mode: "category", // ✅ phân biệt mode
            category,
            posts,
            collection
          },
        };
      })
  );

  // 2. Tạo path cho collection name (blogs, books, sutras…)
  const collectionPaths = Object.entries(CONTENT_MAP).map(([collection, data]) => ({
    params: { category: collection }, // ✅ reuse param "category"
    props: {
      mode: "collection",
      category: collection,
      posts: data.posts,
      collection,
    },
  }));

  return [...categoryPaths, ...collectionPaths];
}

const { mode, category, posts, collection } = Astro.props;
const base = import.meta.env.BASE_URL;

const description =
    mode === "category"
        ? `Tất cả bài viết về ${category} trong ${collection}`
        : `Tất cả bài viết trong collection ${collection}`;
---

<Layout title={category} description={description}>
  <div class="category-page">
    <header class="page-header">
      <h1 class="page-title">
        {mode === "category" ? `Category: ${category}` : `Collection: ${collection}`}
      </h1>
      <p class="page-description">
        {posts.length} bài viết {mode === "category" ? `trong category này` : `trong collection ${collection}`}
      </p>
      <hr class="page-rule" />
    </header>

    <div class="posts-list">
      {posts.map((post: any) => {
        const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
        return (
            <article class="post-item">
              <h2 class="post-title">
                <a href={`${base}${post.frontmatter.type}/${slug}`}>
                  {post.frontmatter.title}
                </a>
              </h2>

              <div class="post-meta">
                <time
                    class="post-date"
                    datetime={new Date(post.frontmatter.date).toISOString()}
                >
                  {new Date(post.frontmatter.date).toLocaleDateString("vi-VN", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>

              {post.frontmatter.excerpt && (
                  <p class="post-excerpt">{post.frontmatter.excerpt}</p>
              )}

              <a href={`${base}${post.frontmatter.type}/${slug}`} class="read-more">
                Đọc tiếp →
              </a>
            </article>
        );
      })}
    </div>

    <div class="page-navigation">
      <a href={`${base}/${mode === "category" ? `${collection}/categories` : collection}`} class="back-link">
        ← Quay lại {mode === "category" ? "tất cả Categories" : "Collection"}
      </a>
    </div>
  </div>
</Layout>
