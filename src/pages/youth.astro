---
import Layout from '../layouts/Layout.astro';
import HtmlBlocks from "../components/ui/HtmlBlocks.astro";
import ZEN_AND_YOUTH from "../components/htmlData/ZEN_AND_YOUTH.astro";

const tagLine0 = "Chẳng cùng muôn pháp làm bạn là người gì?";
const tagLine1 = "Khi chưa có trời đất, ta là cái gì?";
const tagLine2 = "Muôn pháp về một, một về chỗ nào?";
const tagLine3 = "Trước khi cha mẹ chưa sanh, mặt mũi bổn lai của ta ra sao?";
const tagLine4 = "Sanh từ đâu đến, chết đi về đâu?";
const tagLine5 = "Chẳng phải tâm, chẳng phải Phật, chẳng phải vật, là cái gì?";

const title = "Tổ Sư Thiền và Tuổi Trẻ";
const description = "Xem " + title;
---

<Layout
    title={title}
    description={description}
    showSidebar={false}
>
  <div class="landing-page">

    <!-- HtmlBlocks Section -->
    <HtmlBlocks>
      <ZEN_AND_YOUTH />
    </HtmlBlocks>

  </div>
</Layout>

<style>
  .landing-page {
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .image-area {
    text-align: center;
    padding: calc(var(--grid-unit) * 1) 0 calc(var(--grid-unit) * 1);
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
  }

  .hero {
    text-align: center;
    padding: calc(var(--grid-unit) * 1) 0 calc(var(--grid-unit) * 1);
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .hero-title {
    font-family: var(--font-heading-primary),serif;
    font-size: 4.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.3;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .hero-subtitle {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: calc(var(--grid-unit) * 3);
  }

  .hero-description {
    font-size: 1.375rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: calc(var(--grid-unit) * 4);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-rule {
    height: 6px;
    background-color: var(--color-accent-goldenrod);
    border: none;
    width: 150px;
    margin: 0 auto calc(var(--grid-unit) * 4);
  }

  .hero-actions {
    display: flex;
    gap: calc(var(--grid-unit) * 2);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    font-family: var(--font-heading-secondary),serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: calc(var(--grid-unit) * 1.5) calc(var(--grid-unit) * 3);
    border-radius: 4px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    font-size: 0.95rem;
  }

  .btn-primary {
    background-color: var(--color-accent-goldenrod);
    color: white;
    border: 2px solid var(--color-accent-goldenrod);
  }

  .btn-primary:hover,
  .btn-primary:focus {
    background-color: transparent;
    color: var(--color-accent-gold);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border: 2px solid var(--color-border);
  }

  .btn-secondary:hover,
  .btn-secondary:focus {
    background-color: var(--color-text-primary);
    color: var(--color-background);
    transform: translateY(-2px);
  }

  /* Dark mode button styles */
  :global([data-theme="dark"]) .btn-primary {
    background-color: var(--color-accent-goldenrod);
    color: white;
    border-color: var(--color-accent-goldenrod);
  }

  :global([data-theme="dark"]) .btn-primary:hover,
  :global([data-theme="dark"]) .btn-primary:focus {
    background-color: transparent;
    color: var(--color-accent-gold);
  }

  :global([data-theme="dark"]) .btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border-color: var(--color-border);
  }

  :global([data-theme="dark"]) .btn-secondary:hover,
  :global([data-theme="dark"]) .btn-secondary:focus {
    background-color: var(--color-accent-gold);
    color: white;
    border-color: var(--color-accent-gold);
  }

  .rules {
    padding: calc(var(--grid-unit) * 8) 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 6);
    text-align: center;
  }

  .rules-grid {
    display: grid;
    //grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
  }

  .rule-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: calc(var(--grid-unit) * 4);
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .rule-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent-gold);
  }

  .rule-icon {
    font-size: 3rem;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .rule-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: calc(var(--grid-unit) * 1.5);
  }

  .rule-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Typography Showcase */
  .typography-showcase {
    padding: calc(var(--grid-unit) * 8) 0;
    background-color: var(--color-surface);
  }

  .typography-description {
    text-align: center;
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 6);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .typography-samples {
    display: grid;
    gap: calc(var(--grid-unit) * 6);
  }

  .type-sample {
    text-align: center;
    padding: calc(var(--grid-unit) * 4);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .sample-h1 {
    font-family: var(--font-heading-primary),serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .sample-h2 {
    font-family: var(--font-heading-secondary),serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.2;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .sample-body {
    font-family: var(--font-body),serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: calc(var(--grid-unit) * 2);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .sample-code {
    font-family: var(--font-mono),serif;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: calc(var(--grid-unit)) calc(var(--grid-unit) * 1.5);
    border-radius: 4px;
    display: inline-block;
    margin-bottom: calc(var(--grid-unit) * 2);
    color: var(--color-text-primary);
  }

  .type-meta {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .blog-section {
    max-width: 100%;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .blog-description {
    text-align: center;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 6);
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-posts {
    display: grid;
    //grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .blog-post-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: calc(var(--grid-unit) * 2);
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .blog-post-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent-goldenrod);
  }

  .blog-post-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: calc(var(--grid-unit));
  }

  .blog-post-title a {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .blog-post-title a:hover,
  .blog-post-title a:focus {
    color: var(--color-accent-gold);
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit));
    margin-bottom: calc(var(--grid-unit) * 1.5);
  }

  .blog-post-date {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-post-reading-time {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-post-reading-time::before {
    content: "•";
    margin: 0 calc(var(--grid-unit) / 2);
    color: var(--color-border);
  }

  .blog-post-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .blog-post-badges {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) / 2);
  }

  .blog-badge {
    background-color: var(--color-text-primary);
    color: white;
    padding: calc(var(--grid-unit) / 4) calc(var(--grid-unit) / 2);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 2px;
  }

  /* Dark mode blog badge styles */
  :global([data-theme="dark"]) .blog-badge {
    background-color: var(--color-surface);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  .blog-actions {
    text-align: center;
  }

  .installation {
    padding: calc(var(--grid-unit) * 8) 0;
    background-color: var(--color-surface);
  }

  .install-steps {
    display: grid;
    gap: calc(var(--grid-unit) * 4);
  }

  .step {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: calc(var(--grid-unit) * 2);
    align-items: start;
  }

  .step-number {
    font-family: var(--font-heading-primary),serif;
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-accent-goldenrod);
    margin: 0;
  }

  .step-content {
    display: flex;
    flex-direction: column;
  }

  .step-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: calc(var(--grid-unit));
  }

  .code-block {
    display: flex;
    width: 100%;
    background-color: var(--color-text-primary);
    color: var(--color-background);
    padding: calc(var(--grid-unit) * 2);
    border-radius: 8px;
    overflow-x: auto;
    margin: 0;
  }

  .code-block code {
    width: 100%;
    font-family: var(--font-mono),serif;
    background: none;
    border: none;
    color: inherit;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .rules-grid {
      grid-template-columns: 1fr;
    }

    .step {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .step-number {
      font-size: 2rem;
    }
  }
</style>
