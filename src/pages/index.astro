---
import Layout from '../layouts/Layout.astro';
import rules from '@/data/rules.ts';
import principles from '@/data/principles.ts';
import gates from '@/data/gates.ts';
import PostTags from "../components/post/PostTags.astro";
import PostImage from "../components/post/PostImage.astro";
import { CONTENT_MAP } from "@/utils/getMarkdownContent";
import { toKebabCase } from "@/utils/helper";
import Hero from "../components/ui/Hero.astro";
import HeroCustomized from "../components/ui/HeroCustomized.astro";
import BioWithImage from "../components/ui/BioWithImage.astro";
import HTTDL from "../components/special/HTTDL.astro";

const maxQuantity = 6;
const tagLine0 = "Chẳng cùng muôn pháp làm bạn là người gì?";
const tagLine1 = "Khi chưa có trời đất, ta là cái gì?";
const tagLine2 = "Muôn pháp về một, một về chổ nào?";
const tagLine3 = " Trước khi cha mẹ chưa sanh, mặt mũi bổn lai của ta ra sao?";
const tagLine4 = "Sanh từ đâu đến, chết đi về đâu?";
const tagLine5 = "Chẳng phải tâm, chẳng phải Phật, chẳng phải vật, là cái gì?";

const blogPosts = CONTENT_MAP['blogs'].posts
  ?.slice(0, maxQuantity)
  ?.map(post => {
    const { frontmatter } = post as any;

    return {
      title: frontmatter?.title,
      frontmatter,
      slug: '/blogs/' + toKebabCase(frontmatter?.title),
    }
});
const bookPosts = CONTENT_MAP['books'].posts
  ?.filter(post => post.frontmatter.showInHomepage)
  ?.map(post => {
    const { frontmatter } = post as any;

    return {
      title: frontmatter?.title,
      frontmatter,
      slug: '/books/' + toKebabCase(frontmatter?.title),
    }
});
const practicePosts = CONTENT_MAP['practices'].posts
  ?.filter(post => post.frontmatter.showInHomepage)
  ?.map(post => {
    const { frontmatter } = post as any;

    return {
      title: frontmatter?.title,
      frontmatter,
      slug: '/practices/' + toKebabCase(frontmatter?.title),
    }
});

const title = "Trang chủ";
const description = "Xem " + title;
---

<Layout
    title={title}
    description={description}
    showSidebar={false}
>
  <div class="landing-page">

    <!-- Hero Section -->
    <Hero
      title="TỔ SƯ THIỀN"
      subTitle="Tham Thoại Đầu - Khởi Nghi Tình"
      description="Kiến tánh thành Phật"
      actions={[
        {
          href: "/sutras",
          text: "Xem Kinh",
          class: "btn-btn-secondary",
        },
        {
          href: "/interpretations",
          text: "Giảng Giải",
          class: "btn-btn-secondary",
        },
        {
          href: "/practices",
          text: "Thực Hành",
          class: "btn-btn-secondary",
        },
        {
          href: "#rules",
          text: "Chú Ý",
          class: "btn-primary",
        },
      ]}
    />

    <!-- Image Section -->
    <section class="image-area">
      <PostImage imageUrl={'/images/backgrounds/thien-dinh-cua-Phat.jpg'} imageAlt={'Thiền định của Phật - Tổ Sư Thiền'} />
      <p class="blog-description tag-line-accent">{tagLine0}</p>
    </section>

    <!-- BioWithImage Section -->
    <BioWithImage
      src= "/images/masters/Weili_Juekai.jpg"
      alt= "TS. THÍCH DUY LỰC"
      href= "/masters/Weili-Juekai"
    >
      <HTTDL />
    </BioWithImage>

    <!-- Practice Section -->
    <section class="blog-section" id="practices">
      <div class="container">
        <h2 class="section-title">Thực Hành</h2>
        <p class="blog-description tag-line-accent">{tagLine1}</p>

        {practicePosts.length > 0 && (
          <div class="blog-posts" >
            {practicePosts.map(post => (
              <article class="blog-post-card">
                <h3 class="blog-post-title">
                  <a href={post.slug}>{post.title}</a>
                </h3>
                <PostTags frontmatter={post.frontmatter} />
              </article>
            ))}
          </div>
        )}

        <div class="blog-actions">
          <a href={`${import.meta.env.BASE_URL}practices`} class="btn btn-primary" target="_blank">Xem Tất cả</a>
        </div>
      </div>
    </section>

    <!-- Book Section -->
    <section class="blog-section" id="books">
      <div class="container">
        <h2 class="section-title">Sách</h2>
        <p class="blog-description tag-line-accent">{tagLine2}</p>

        {bookPosts.length > 0 && (
          <div class="blog-posts">
            {bookPosts.map(post => (
              <article class="blog-post-card">
                <h3 class="blog-post-title">
                  <a href={post.slug}>{post.title}</a>
                </h3>
                <PostTags frontmatter={post.frontmatter} />
              </article>
            ))}
          </div>
        )}

        <div class="blog-actions">
          <a href={`${import.meta.env.BASE_URL}books`} class="btn btn-primary" target="_blank">Xem Tất cả</a>
        </div>
      </div>
    </section>

    <!-- Blog Section -->
    <section class="blog-section" id="blogs">
      <div class="container">
        <h2 class="section-title">Bài viết</h2>
        <p class="blog-description tag-line-accent">{tagLine3}</p>

        {blogPosts.length > 0 && (
          <div class="blog-posts">
            {blogPosts.map(post => (
              <article class="blog-post-card">
                <h3 class="blog-post-title">
                  <a href={post.slug}>{post.frontmatter.title}</a>
                </h3>
                <PostTags frontmatter={post.frontmatter} />
              </article>
            ))}
          </div>
        )}

        <div class="blog-actions">
          <a href={`${import.meta.env.BASE_URL}blogs`} class="btn btn-primary" target="_blank">Xem Tất cả</a>
        </div>
      </div>
    </section>

    <!-- Rule Section -->
    <section class="rules" id="rules">
      <div class="container">
        <h2 class="section-title">10 Chú Ý</h2>
        <p class="blog-description tag-line-accent">{tagLine4}</p>
        <p class="blog-description">Người tham Tổ Sư Thiền phải chú ý những điều sau đây</p>

        <div class="rules-grid">
          {
            rules?.map(rule => <div class="rule-card">
              <h3 class="rule-title">{ rule.title }</h3>
              <p class="rule-description">{ rule.description }</p>
            </div>)
          }
        </div>
      </div>
    </section>

    <!-- Principle Section -->
    <section class="typography-showcase">
      <div class="container">
        <h2 class="section-title">2 Tâm Niệm</h2>
        <p class="blog-description tag-line-accent">{tagLine5}</p>
        <p class="typography-description">
          Muốn đạt đến kiến tánh giải thoát, hành giả tham tổ sư thiền cần phải thực hành đúng theo cơ bản như sau.
        </p>

        <div class="typography-samples">
          {
            principles?.map(principle => <div class="type-sample">
              <h4 class="sample-h1">{ principle.title }</h4>
              <p class="type-meta">
                {
                  principle.description?.includes(' / ')
                      ? principle.description
                          ?.split(' / ')
                          ?.map(line => <p>{line}</p>)
                      : principle.description
                }
              </p>
            </div>)
          }
        </div>
      </div>
    </section>

    <!-- 3 Satori Gates Section -->
<!--    <section class="typography-showcase">
      <div class="container">
        <h2 class="section-title">TAM QUAN</h2>
        <p class="typography-description">
          3 cửa ải <b>Sơ Quan</b> (初關), <b>Trùng Quan</b> (重關), và <b>Mạt Hậu Lao Quan</b> (末後牢關)
          là những cột mốc then chốt trong tiến trình tu chứng của <b>Tổ Sư Thiền</b> (祖師禪) - <b>Thiền Tông</b>,
          liên quan mật thiết đến pháp tu <b>Tham Thoại Đầu</b> và <b>Giữ Nghi Tình</b>.
        </p>

        <div class="typography-samples">
          {
            gates?.map(gate => <div class="type-sample">
              <h4 class="sample-h1">{ gate.title }</h4>
              <p class="type-meta">
                {
                  gate.description?.includes(' / ')
                      ? gate.description
                          ?.split(' / ')
                          ?.map(line => <p>{line}</p>)
                      : gate.description
                }
              </p>
            </div>)
          }
        </div>
      </div>
    </section>-->
  </div>
</Layout>

<style>
  .landing-page {
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .image-area {
    text-align: center;
    padding: calc(var(--grid-unit) * 1) 0 calc(var(--grid-unit) * 1);
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
  }

  .hero {
    text-align: center;
    padding: calc(var(--grid-unit) * 1) 0 calc(var(--grid-unit) * 1);
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .hero-title {
    font-family: var(--font-heading-primary),serif;
    font-size: 4.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 0.9;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .hero-subtitle {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: calc(var(--grid-unit) * 3);
  }

  .hero-description {
    font-size: 1.375rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: calc(var(--grid-unit) * 4);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-rule {
    height: 6px;
    background-color: var(--color-accent-goldenrod);
    border: none;
    width: 150px;
    margin: 0 auto calc(var(--grid-unit) * 4);
  }

  .hero-actions {
    display: flex;
    gap: calc(var(--grid-unit) * 2);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    font-family: var(--font-heading-secondary),serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: calc(var(--grid-unit) * 1.5) calc(var(--grid-unit) * 3);
    border-radius: 4px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    font-size: 0.95rem;
  }

  .btn-primary {
    background-color: var(--color-accent-goldenrod);
    color: white;
    border: 2px solid var(--color-accent-goldenrod);
  }

  .btn-primary:hover,
  .btn-primary:focus {
    background-color: transparent;
    color: var(--color-accent-gold);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border: 2px solid var(--color-border);
  }

  .btn-secondary:hover,
  .btn-secondary:focus {
    background-color: var(--color-text-primary);
    color: var(--color-background);
    transform: translateY(-2px);
  }

  /* Dark mode button styles */
  :global([data-theme="dark"]) .btn-primary {
    background-color: var(--color-accent-goldenrod);
    color: white;
    border-color: var(--color-accent-goldenrod);
  }

  :global([data-theme="dark"]) .btn-primary:hover,
  :global([data-theme="dark"]) .btn-primary:focus {
    background-color: transparent;
    color: var(--color-accent-gold);
  }

  :global([data-theme="dark"]) .btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border-color: var(--color-border);
  }

  :global([data-theme="dark"]) .btn-secondary:hover,
  :global([data-theme="dark"]) .btn-secondary:focus {
    background-color: var(--color-accent-gold);
    color: white;
    border-color: var(--color-accent-gold);
  }

  .rules {
    padding: calc(var(--grid-unit) * 8) 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 6);
    text-align: center;
  }

  .rules-grid {
    display: grid;
    //grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
  }

  .rule-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: calc(var(--grid-unit) * 4);
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .rule-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent-gold);
  }

  .rule-icon {
    font-size: 3rem;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .rule-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: calc(var(--grid-unit) * 1.5);
  }

  .rule-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Typography Showcase */
  .typography-showcase {
    padding: calc(var(--grid-unit) * 8) 0;
    background-color: var(--color-surface);
  }

  .typography-description {
    text-align: center;
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 6);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .typography-samples {
    display: grid;
    gap: calc(var(--grid-unit) * 6);
  }

  .type-sample {
    text-align: center;
    padding: calc(var(--grid-unit) * 4);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .sample-h1 {
    font-family: var(--font-heading-primary),serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .sample-h2 {
    font-family: var(--font-heading-secondary),serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent-goldenrod);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.2;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .sample-body {
    font-family: var(--font-body),serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: calc(var(--grid-unit) * 2);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .sample-code {
    font-family: var(--font-mono),serif;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: calc(var(--grid-unit)) calc(var(--grid-unit) * 1.5);
    border-radius: 4px;
    display: inline-block;
    margin-bottom: calc(var(--grid-unit) * 2);
    color: var(--color-text-primary);
  }

  .type-meta {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .blog-section {
    max-width: 100%;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .blog-description {
    text-align: center;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 6);
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-posts {
    display: grid;
    //grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .blog-post-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: calc(var(--grid-unit) * 2);
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .blog-post-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent-goldenrod);
  }

  .blog-post-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: calc(var(--grid-unit));
  }

  .blog-post-title a {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .blog-post-title a:hover,
  .blog-post-title a:focus {
    color: var(--color-accent-gold);
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit));
    margin-bottom: calc(var(--grid-unit) * 1.5);
  }

  .blog-post-date {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-post-reading-time {
    font-family: var(--font-mono),serif;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-post-reading-time::before {
    content: "•";
    margin: 0 calc(var(--grid-unit) / 2);
    color: var(--color-border);
  }

  .blog-post-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: calc(var(--grid-unit) * 2);
  }

  .blog-post-badges {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) / 2);
  }

  .blog-badge {
    background-color: var(--color-text-primary);
    color: white;
    padding: calc(var(--grid-unit) / 4) calc(var(--grid-unit) / 2);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 2px;
  }

  /* Dark mode blog badge styles */
  :global([data-theme="dark"]) .blog-badge {
    background-color: var(--color-surface);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  .blog-actions {
    text-align: center;
  }

  .installation {
    padding: calc(var(--grid-unit) * 8) 0;
    background-color: var(--color-surface);
  }

  .install-steps {
    display: grid;
    gap: calc(var(--grid-unit) * 4);
  }

  .step {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: calc(var(--grid-unit) * 2);
    align-items: start;
  }

  .step-number {
    font-family: var(--font-heading-primary),serif;
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-accent-goldenrod);
    margin: 0;
  }

  .step-content {
    display: flex;
    flex-direction: column;
  }

  .step-title {
    font-family: var(--font-heading-secondary),serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: calc(var(--grid-unit));
  }

  .code-block {
    display: flex;
    width: 100%;
    background-color: var(--color-text-primary);
    color: var(--color-background);
    padding: calc(var(--grid-unit) * 2);
    border-radius: 8px;
    overflow-x: auto;
    margin: 0;
  }

  .code-block code {
    width: 100%;
    font-family: var(--font-mono),serif;
    background: none;
    border: none;
    color: inherit;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .rules-grid {
      grid-template-columns: 1fr;
    }

    .step {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .step-number {
      font-size: 2rem;
    }
  }
</style>
