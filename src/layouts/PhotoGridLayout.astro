---
/* import "~/styles/reset.css";
import "~/styles/base.css"; */
import '../styles/global.css';

import smartypants from "smartypants";

import Header from '../components/page/Header.astro';
import Footer from '../components/page/Footer.astro';
import BackToTop from '../components/ui/BackToTop.astro';


import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL } from '../config';
import ScrollToBottom from "../components/ui/ScrollToBottom.astro";
import SEO from "../components/page/SEO.astro";
export interface Props {
  title: string;
  meta_title?: string;
  description?: string;
  excerpt?: string;
  showSidebar?: boolean;
  image?: string;
  images: Record<string, () => Promise<any>>;
  aboutType?: 'Thing' | 'Person' | 'Event' | 'Place';
  type?: 'website' | 'article' | 'collectionPage';
  publishedTime?: string;
  modifiedTime?: string;
  canonical?: string;
  collection?: string;
  schemaType?: string;
  wiki?: string;
}

const {
  title,
  meta_title,
  description,
  excerpt,
  image = '/images/backgrounds/Buddha-zen.jpg',
  images = [],
  type,
  publishedTime,
  canonical,
  aboutType,
} = Astro.props;


const canonicalURL = canonical || new URL(Astro.url.pathname, SITE_URL || Astro.site).toString();
const metaDescription = description || excerpt || SITE_DESCRIPTION;
const resolvedImages = await Promise.all(
    Object.entries(images).map(async ([_path, image]) => {
      const { default: imageData } = await image();

      return {
        src: imageData.src,
        width: imageData.width,
        height: imageData.height
      };
    })
);

// GallerySchema schema
const gallerySchema = images?.length ? {
  "@type": "CollectionPage",
  "@id": `${canonicalURL}#collection`,
  "url": canonicalURL,
  "name": title,
  "description": metaDescription,

  "isPartOf": {
    "@id": `${SITE_URL}#website`
  },

  // ðŸ‘‡ Äáº¶T á»ž ÄÃ‚Y
  "about": {
    "@type": aboutType || "Thing",
    "name": title
  },

  "hasPart": resolvedImages.map(img => ({
    "@type": "ImageObject",
    "contentUrl": new URL(img.src, SITE_URL).toString(),
    "width": img.width,
    "height": img.height
  }))
} : null;

// Gá»™p schema vÃ o @graph
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    ...(gallerySchema ? [gallerySchema] : [])
  ]
};

const pageTitle = Astro.url.pathname === "/" ? title : `${title} Â· ${SITE_TITLE}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" href="/favicon-new.ico" sizes="48x48" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon-new.ico" sizes="48x48" type="image/x-icon">
    <title set:html={smartypants(pageTitle, 1)} />
    <meta name="description" content={smartypants(description, 1)} />
    <meta property="og:title" content={smartypants(title, 1)} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={smartypants(description, 1)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content={SITE_TITLE} />

    <!--PWA manifest-->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#d4af37" />
    <script> if ('serviceWorker' in navigator) { navigator.serviceWorker.register('/pwa-sw.js') } </script>

    <script is:inline src="/theme-init.js"></script>

    <!-- JSON-LD Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>

    <SEO
      title={meta_title || title}
      description={description || excerpt}
      image={image}
      type={type}
      publishedTime={publishedTime}
      canonical={canonical}
    />

    {images.map(img => (
        <meta
      property="og:image"
      content={new URL(img.src, SITE_URL).toString()}
      />
      ))}
  </head>
  <body>

  <div id="top"></div>

  <div class="site-wrapper">
    <Header />

    <slot />

    <BackToTop />
    <ScrollToBottom />
    <Footer />
  </div>

  <div id="bottom"></div>

  </body>
</html>
